@model Vidly.Models.Movies
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.MovieGenre.Name</li>
    <li>Release Date: @Model.ReleaseDate.Date.ToShortDateString()</li>
    <li>Date Added: @Model.DateAdded.Date.ToShortDateString()</li>
    <li>Number in Stock: @Model.Stock</li>
</ul>
